pipeline {
    agent any
    stages {
        stage('build') {
	  agent {
	    docker
	    	  {
		  image "node:alpine"
		  reuseNode true
		 }
	      } 
		 
          steps {
            	  sh ''' 
			ls -la
			node --version
			npm --version
			npm ci
			npm run build
			ls -al
		  '''
            }
        }  
		 stage ('Test') {
		agent {
	    docker
	    	  {
		  image "node:alpine"
		  reuseNode true
		 }	
		  }
		  steps {
				  sh '''
			echo Test
			npm test
			'''	
			}
		 }

    }
}
