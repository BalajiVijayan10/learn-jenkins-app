pipeline {
    agent any
    stages {
        stage('build') {
	  agent {
	    docker
	    	  {
		  image "Node:apline"
		  reuseNode true
		 }
	      } 
		 
          steps {
            	  sh ''' 
			ls -la
			node --version
			npm --version
			npm ci
			npm run build
			ls -al
		  '''
            }
        }        
    }
}
